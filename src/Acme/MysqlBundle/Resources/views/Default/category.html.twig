{% extends '::base.html.twig' %}

{% block content %}
    <ul>
    {% for product in products %}
        <li>
            <strong><a href="{{ path('product', {slug: product.slug}) }}" >{{ product.name }}</a></strong>
            <p>{{ product.description }}</p>
            <hr />
        </li>
    {% endfor %}
    </ul>
{% endblock %}
